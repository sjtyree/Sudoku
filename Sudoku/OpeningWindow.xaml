<Window x:Class="Sudoku.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku"
        mc:Ignorable="d"
        Title="Sudoku" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="EasyButton" Content="Easy" HorizontalAlignment="Stretch" Grid.Row="0" VerticalAlignment="Stretch" FontSize="72" Click="ButtonClickEvent"/>
        <Button x:Name="MediumButton" Content="Medium" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" FontSize="72" Click="ButtonClickEvent"/>
        <Button x:Name="HardButton" Content="Hard" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Stretch" FontSize="72" Click="ButtonClickEvent"/>
    </Grid>
</Window>
